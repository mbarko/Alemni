<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>@ViewBag.Title-Alemni </title>
    @Styles.Render("~/Content/css")
    @Scripts.Render("~/bundles/modernizr")
    <link href="//amp.azure.net/libs/amp/1.8.0/skins/amp-default/azuremediaplayer.min.css" rel="stylesheet">
   
    <link rel="stylesheet" type="text/css" href="https://maxcdn.bootstrapcdn.com/font-awesome/4.5.0/css/font-awesome.min.css">
    <script src="//amp.azure.net/libs/amp/1.8.0/azuremediaplayer.min.js"></script>
   


    <meta name="description" content="The description of my page" />
</head>
<body>
    @{var bgcolor = ViewBag.NavBarType == ("Image Nav Bar") ? "transparent" : "#009688"; }
    <div class="navbar navbar-inverse navbar-fixed-top navbar_noFix" style="background-color: @bgcolor">
        <div class="container">
            <div class="navbar-header">
                <button type="button" class="navbar-toggle" data-toggle="collapse" data-target=".navbar-collapse">
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                    <span class="icon-bar"></span>
                </button>
                <a class="navbar-brand" href="/">3alemny</a>
            </div>
            <div class="navbar-collapse collapse">
                <ul class="nav navbar-nav">
                    <li><a href="/" class="">Home</a></li>
                    <li><a href="/Home/About" class="">About</a></li>
                    <li><a href="/Home/Contact" class="">Contact</a></li>

                </ul>

                <form style="display:none" class="navbar-form navbar-left " method="get" action="@Url.Action("VideoSeries", "VideoSeries")" role="search">
                    <div class="form-group" style="border: none;">
                        <input type="text" pattern="[a-zA-Z0-9]+" class="form-control search-resize" placeholder="Search Programs" name="search">

                    </div>
                    <button type="submit" class="btn  btn-nav-icon"><i class="ion-search nav-icon"></i></button>

                </form>


                @Html.Partial("_LoginPartial")

            </div>
        </div>
    </div>
    <div class="container body-content">
        @RenderBody()
        <hr />
        <footer>
            <p>&copy; @DateTime.Now.Year - My ASP.NET Application</p>
        </footer>
    </div>

    <script type="text/javascript" src="https://cdnjs.cloudflare.com/ajax/libs/jquery/1.9.0/jquery.min.js"></script>


    @Scripts.Render("~/bundles/lib")
    @RenderSection("scripts", required: false)


</body>

</html>
